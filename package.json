{
  "name": "@agentic-codeflow/cli",
  "version": "0.2.0",
  "description": "CLI for Agentic CodeFlow AI-assisted development workflows",
  "type": "module",
  "bin": {
    "codeflow": "./src/cli/index.ts"
  },
  "keywords": [
    "cli",
    "ai",
    "development",
    "workflow", 
    "automation",
    "agent",
    "mcp",
    "claude",
    "opencode"
  ],
  "homepage": "https://github.com/ferg-cod3s/codeflow",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferg-cod3s/codeflow.git"
  },
  "bugs": {
    "url": "https://github.com/ferg-cod3s/codeflow/issues"
  },
  "author": "ferg.cod3s <john.ferguson@jferguson.info>",
  "license": "MIT",
  "files": [
    "src",
    "mcp", 
    "agent",
    "claude-agents",
    "opencode-agents",
    "command",
    "config.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "install": "bun link",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "mcp:server": "bun run mcp/codeflow-server.mjs",
    "mcp:dev": "bun run --watch mcp/codeflow-server.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepublishOnly": "bun run typecheck && bun run test && bun run lint",
    "prepack": "bun run typecheck"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.2",
    "eslint": "^9.9.0",
    "@eslint/js": "^9.9.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "prettier": "^3.3.3"
  }
}